<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      
        <% if (!user) { %>
        <div class="form-row align-items-center">
          <form method="GET" action="/user/login">
            <div class="collapse navbar-collapse">
              <!-- <input type="text" class="form-control" name="email" placeholder="Enter Email" style = "margin-right: 5px;" required>
              <input type="password" class="form-control" placeholder="Enter password" style = "margin-right: 5px;" required> -->
              <button type="submit" class="btn btn-primary" style="margin-right: 10px;">Login</button>
             
            </div>
          </form>
          <% if (!register) { %>
            <form method="GET" action='/user/register'>
              <button type="submit"  class="btn btn-outline-dark">Register</button>
            </form> 
          <% };%>
        </div>
        <% } else { %>
          <form method="POST" action="/user/logout">
            <div class="collapse navbar-collapse">
              <span style = "margin-right: 10px;" >Logged In As: <%= user.email %> </span>
              <button type="submit" class="btn btn-outline-dark" >Log out</button>
            </div>
          </form>
          <% };%>
    </div>
  </nav>
</header>
